<p id="notice"><%= notice %></p>

<h1>Restaurant</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant code</th>
      <th>Restaurant name</th>
      <th>Location</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Review link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.restaurant_code %></td>
        <td><%= restaurant.restaurant_name %></td>
        <td><%= restaurant.location %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.email %></td>
        <td>
            <a href='<%= restaurant.review_link %>' target="_blank">Review</a>
            <!--<iframe width="100" height="100"
              src="https://www.youtube.com/embed/<%= restaurant.review_link.split('=')[1] %>">
            </iframe>-->
        </td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= form_tag({controller: "restaurants", action: "import", method: "post"}, {multipart: true}) do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Upload restaurant data" %>
<% end %>
<br>
<%= link_to "Download as CSV", restaurants_path(:format => "csv") %>
<br>

<%= link_to 'New Restaurant', new_restaurant_path %>
